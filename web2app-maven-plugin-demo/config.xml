<?xml version='1.0' encoding='utf-8'?>
<widget id="${app.id}"
        version="${app.version}"
        android-versionCode="${app.version.code}"
        ios-CFBundleVersion="${app.version.code}"
        xmlns="http://www.w3.org/ns/widgets">
    <name>${app.name}</name>
    <description>${app.description}</description>
    <author email="${app.author.email}" href="${app.author.site}">
        App Team
    </author>
    <content src="${app.content}"/>
    <plugin name="cordova-plugin-whitelist"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <preference name="SplashScreen" value="splashscreen"/>
    <preference name="SplashMaintainAspectRatio" value="true"/>
    <preference name="AutoHideSplashScreen" value="false"/>
    <platform name="android">
        <preference name="SplashScreenDelay" value="30000"/>
    </platform>
    <platform name="ios">
        <preference name="SplashScreenDelay" value="0"/>
    </platform>
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="FadeSplashScreenDuration" value="0"/>
    <preference name="ShowSplashScreenSpinner" value="true"/>
    <preference name="StatusBarOverlaysWebView" value="false"/>
    <preference name="StatusBarBackgroundColor" value="#0072af"/>
    <preference name="StatusBarStyle" value="lightcontent"/>
    <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <platform name="ios">
        <preference name="Orientation" value="all"/>
    </platform>
    <preference name="xwalkVersion" value="17+"/>
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect"/>
    <preference name="xwalkMode" value="embedded"/>
    <preference name="xwalkMultipleApk" value="true"/>
</widget>
